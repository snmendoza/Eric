#:import hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window

# change app background
<Layout>:
        canvas.before:
                Color:
                        rgba: hex('#070707')
                Rectangle:
                        pos: self.pos
                        size: self.size

# change font size
<Label>:
        font_size: Window.height * .04

# add padding to tab content
<TabContentLayout@BoxLayout>:
        padding: self.height * .01

# hide scroll bars
<ScrollView>:
        bar_color: 0, 0, 0, 0
        bar_inactive_color: 0, 0, 0, 0

# resize images and disable cache to avoid gpu mem issues
<Image>:
        allow_stretch: True
        nocache: True

# use bold font for buttons
<Button>:
        bold: True

<MyButton>:
        background_down_color: hex('#33B5E5')
        down_color: hex('#33B5E5')

# define button sizes
<ButtonM@MyButton>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)

<ButtonL@MyButton>:
        size_hint: None, None
        height: min(Window.width * .15, Window.height * .15)
        width: min(Window.width * .15, Window.height * .15)
 
<RepeatButtonM@RepeatButton>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)

<ToggleButtonM@MyToggleButton>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)

<CircularButtonM@ButtonM>:
        # make background transparent
        background_color: 0, 0, 0, 0
        background_down_color: 0, 0, 0, 0
        canvas.before:
                Color:
                        rgba: hex('#33B5E5')
                Line:
                        width: self.width * .025
                        circle: self.center_x, self.center_y, self.width / 2.

<MyToggleButton>:
        background_down_color: hex('#33B5E5')
        
<OnOff>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)
        background_normal: 'images/power.png'
        background_down: 'images/power.png'

<ACPower>:
        size_hint: None, None
        height: min(Window.width * .15, Window.height * .15)
        width: min(Window.width * .15, Window.height * .15)

<MyTabbedPanelItem>:
        bold: True

<BorderedBoxLayout@BoxLayout>:
        padding: Window.width * .025
        canvas.before:
                Color:
                        rgba: hex('1f667f')
                Line:
                        width: Window.width * .001
                        rounded_rectangle: self.x, self.y, self.width, self.height, Window.width * .01
