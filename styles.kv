#:import hex kivy.utils.get_color_from_hex

# change app background
<Layout>:
        canvas.before:
                Color:
                        rgba: hex('#070707')
                Rectangle:
                        pos: self.pos
                        size: self.size

# add padding to tab content
<TabContentLayout@BoxLayout>:
        padding: self.height * .01

# resize images
<Image>:
        allow_stretch: True
