#:import hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window

# change app background
<Layout>:
        canvas.before:
                Color:
                        rgba: hex('#070707')
                Rectangle:
                        pos: self.pos
                        size: self.size

# add padding to tab content
<TabContentLayout@BoxLayout>:
        padding: self.height * .01

# resize images
<Image>:
        allow_stretch: True

# define button sizes
<ButtonM@MyButton>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)
<RepeatButtonM@RepeatButton>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)
<ToggleButtonM@MyToggleButton>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)
<OnOff>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)
<ACPower>:
        size_hint: None, None
        height: min(Window.width * .1, Window.height * .1)
        width: min(Window.width * .1, Window.height * .1)
