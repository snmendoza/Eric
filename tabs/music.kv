#:import MySlider uix.myslider
#:import MyToggleButton uix.mytogglebutton
#:import SelectableLabel uix.selectablelabel
#:import SelectableRecycleBoxLayout uix.selectablerecycleboxlayout

<Music>:
        text: 'MÃºsica'
        BoxLayout:
                RecycleView:
                        id: categories_rv
                        viewclass: 'SelectableLabel'
                        SelectableRecycleBoxLayout:
                                orientation: 'vertical'
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 2
                        BoxLayout:
                                AsyncImage:
                                        id: albumart
                                        source: root.DEF_ALBUMART
                                BoxLayout:
                                        orientation: 'vertical'
                                        size_hint_x: 2
                                        Label:
                                                id: artist
                                                text: root.DEF_ARTIST
                                        Label:
                                                id: album
                                                text: root.DEF_ALBUM
                                        Label:
                                                id: title
                                                text: root.DEF_TITLE
                                        BoxLayout:
                                                Label:
                                                        id: elapsed
                                                        size_hint_x: None
                                                        text: root.DEF_TIME
                                                MySlider:
                                                        id: time
                                                        on_release: root.set_elapsed(self.value)
                                                        on_move: root.preview_elapsed(self.value)
                                                        on_press: root.preview_elapsed(self.value)
                                                Label:
                                                        id: remaining
                                                        size_hint_x: None
                                                        text: root.DEF_TIME
                        BoxLayout:
                                MyToggleButton:
                                        id: play_pause
                                        text: 'Play/Pause'
                                        on_release: root.play_pause()
                                Button:
                                        text: 'Prev'
                                        on_release: root.prev()
                                Button:
                                        text: 'Stop'
                                        on_release: root.stop()
                                Button:
                                        text: 'Next'
                                        on_release: root.next()
                                MyToggleButton:
                                        id: mute_unmute
                                        text: 'Mute'
                                        on_release: root.mute_unmute()
                                MySlider:
                                        id: volume
                                        on_move: root.set_volume(self.value)
                                        on_release: root.set_volume(self.value)
