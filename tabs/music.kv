<Music>:
        text: 'Música'
        BoxLayout:
                RecycleView:
                        id: categories_rv
                        viewclass: 'ToggleButton'
                        RecycleBoxLayout:
                                orientation: 'vertical'
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 2
                        BoxLayout:
                                AsyncImage:
                                        id: albumart
                                BoxLayout:
                                        orientation: 'vertical'
                                        size_hint_x: 2
                                        Label:
                                                id: artist
                                                text: 'Artista'
                                        Label:
                                                id: album
                                                text: 'Álbum'
                                        Label:
                                                id: title
                                                text: 'Título'
                                        BoxLayout:
                                                Label:
                                                        id: elapsed
                                                        size_hint_x: None
                                                        text: '--:--'
                                                Slider:
                                                        id: time
                                                Label:
                                                        id: remaining
                                                        size_hint_x: None
                                                        text: '--:--'
                        BoxLayout:
                                Button:
                                        id: play_pause
                                        text: 'Play/Pause'
                                        on_release: root.play_pause()
                                Button:
                                        text: 'Prev'
                                        on_release: root.prev()
                                Button:
                                        text: 'Stop'
                                        on_release: root.stop()
                                Button:
                                        text: 'Next'
                                        on_release: root.next()
                                Button:
                                        id: mute_unmute
                                        text: 'Mute'
                                        on_release: root.mute_unmute()
                                Slider:
                                        id: volume
