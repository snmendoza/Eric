#:import MySlider uix.myslider
#:import SelectableLabel uix.selectablelabel
#:import SelectableRecycleBoxLayout uix.selectablerecycleboxlayout
#:import Window kivy.core.window.Window

<Music>:
        text: 'MÃšSICA'
        TabContentLayout:
                RecycleView:
                        id: categories_rv
                        viewclass: 'SelectableLabel'
                        SelectableRecycleBoxLayout:
                                orientation: 'vertical'
                                default_size_hint: 1, None
                                default_size: None, Window.height * .15
                                size_hint_y: None
                                height: self.minimum_height
                BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 2
                        BoxLayout:
                                size_hint_y: 2
                                AsyncImage:
                                        id: albumart
                                        source: root.DEF_ALBUMART
                                BoxLayout:
                                        orientation: 'vertical'
                                        size_hint_x: 2
                                        Label:
                                                id: artist
                                                text: root.DEF_ARTIST
                                        Label:
                                                id: album
                                                text: root.DEF_ALBUM
                                        Label:
                                                id: title
                                                text: root.DEF_TITLE
                                        BoxLayout:
                                                Label:
                                                        id: elapsed
                                                        size_hint_x: None
                                                        text: root.DEF_TIME
                                                MySlider:
                                                        id: time
                                                        on_release: root.set_elapsed(self.value)
                                                        on_move: root.preview_elapsed(self.value)
                                                        on_press: root.preview_elapsed(self.value)
                                                Label:
                                                        id: remaining
                                                        size_hint_x: None
                                                        text: root.DEF_TIME
                        AnchorLayout:
                                BoxLayout:
                                        size_hint_y: None
                                        height: self.minimum_height
                                        spacing: self.width * .05
                                        ToggleButtonM:
                                                id: play_pause
                                                on_release: root.play_pause()
                                                background_normal: 'images/play.png'
                                                background_down: 'images/pause.png'
                                        ButtonM:
                                                on_release: root.prev()
                                                background: 'images/prev.png'
                                        ButtonM:
                                                on_release: root.stop()
                                                background: 'images/stop.png'
                                        ButtonM:
                                                on_release: root.next()
                                                background: 'images/next.png'
                                        ToggleButtonM:
                                                id: mute_unmute
                                                on_release: root.mute_unmute()
                                                background_normal: 'images/volume_high.png'
                                                background_down: 'images/volume_muted.png'
                                        MySlider:
                                                id: volume
                                                on_move: root.set_volume(self.value)
                                                on_release: root.set_volume(self.value)
