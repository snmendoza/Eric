#:import ACPower uix.acpower
#:import LightControl uix.lightcontrol

<LightsAC>:
        text: self.LIGHTS_TITLE + self.AC_TITLE
        TabContentLayout:
                BoxLayout:
                        id: lights_layout
                        orientation: 'vertical'
                        RecycleView:
                                id: lights_rv
                                viewclass: 'LightControl'
                                RecycleBoxLayout:
                                        default_size_hint: 1, None
                                        size_hint_y: None
                                        height: self.minimum_height
                                        orientation: 'vertical'
                AnchorLayout:
                        size_hint_x: .75
                        BoxLayout:
                                id: ac_layout
                                orientation: 'vertical'
                                size_hint: .75, .75
                                Label:
                                        text: 'Aire'
                                AnchorLayout:
                                        ACPower:
                                                id: ac_power
                                                text: 'Power'
                                                on_release: root.ac_power()
                                BoxLayout:
                                        ButtonM:
                                                text: '-'
                                                on_release: root.ac_temp('down')
                                        AnchorLayout:
                                                Label:
                                                        id: ac_temp
                                                        text: '----'
                                        ButtonM:
                                                text: '+'
                                                on_release: root.ac_temp('up')
                                BoxLayout:
                                        Label:
                                                text: 'Estado:'
                                        Label:
                                                id: ac_status
                                                text: '----'
                                BoxLayout:
                                        Label:
                                                text: 'Modo:'
                                        Label:
                                                id: ac_mode
                                                text: '----'
