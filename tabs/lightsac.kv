#:import ACPower uix.acpower
#:import LightControl uix.lightcontrol

<LightsAC>:
        text: self.LIGHTS_TITLE + self.AC_TITLE
        TabContentLayout:
                BoxLayout:
                        id: lights_layout
                        orientation: 'vertical'
                        AnchorLayout:
                                BoxLayout:
                                        id: light_controls_layout
                                        orientation: 'vertical'
                                        size_hint_y: None
                                        height: self.minimum_height
                                        BoxLayout:
                                                id: dimmers_layout
                                                orientation: 'vertical'
                                                size_hint_y: None
                                                height: self.minimum_height
                                        StackLayout:
                                                id: on_offs_layout
                                                size_hint_y: None
                                                height: self.minimum_height
