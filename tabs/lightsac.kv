<Dimmer>:
        min: 0
        max: 100

<LightControl>:
        orientation: 'vertical'
        Label:
                id: name

<LightsAC>:
        text: 'Luces/Aire'
        BoxLayout:
                LightsRV:
                        id: lights_rv
                        viewclass: 'LightControl'
                        RecycleBoxLayout:
                                id: lights_rv_layout
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'
                BoxLayout:
                        orientation: 'vertical'
                        Label:
                                text: 'Aire'
                        ACPower:
                                id: ac_power
                                text: 'Power'
                                on_release: root.ac_power()
                        BoxLayout:
                                Button:
                                        text: '-'
                                        on_release: root.ac_temp_down()
                                Label:
                                        id: ac_temp
                                        text: '----'
                                Button:
                                        text: '+'
                                        on_release: root.ac_temp_up()
                        BoxLayout:
                                Label:
                                        text: 'Estado:'
                                Label:
                                        id: ac_status
                                        text: '----'
                        BoxLayout:
                                Label:
                                        text: 'Modo:'
                                Label:
                                        id: ac_mode
                                        text: '----'
