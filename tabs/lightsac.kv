#:import ACPower uix.acpower
#:import LightControl uix.lightcontrol

<LightsAC>:
        text: 'Luces/Aire'
        BoxLayout:
                BoxLayout:
                        id: lights_layout
                        orientation: 'vertical'
                        RecycleView:
                                id: lights_rv
                                viewclass: 'LightControl'
                                RecycleBoxLayout:
                                        default_size_hint: 1, None
                                        size_hint_y: None
                                        height: self.minimum_height
                                        orientation: 'vertical'
                BoxLayout:
                        orientation: 'vertical'
                        Label:
                                text: 'Aire'
                        ACPower:
                                id: ac_power
                                text: 'Power'
                                on_release: root.ac_power()
                        BoxLayout:
                                Button:
                                        text: '-'
                                        on_release: root.ac_temp('down')
                                Label:
                                        id: ac_temp
                                        text: '----'
                                Button:
                                        text: '+'
                                        on_release: root.ac_temp('up')
                        BoxLayout:
                                Label:
                                        text: 'Estado:'
                                Label:
                                        id: ac_status
                                        text: '----'
                        BoxLayout:
                                Label:
                                        text: 'Modo:'
                                Label:
                                        id: ac_mode
                                        text: '----'
