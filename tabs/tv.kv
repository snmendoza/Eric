#:import RepeatButton uix.repeatbutton

<TV>:
        text: 'TV'
        TabContentLayout:
                AnchorLayout:
                        BoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size: self.minimum_width, self.minimum_height
                                AnchorLayout:
                                        size_hint_y: None
                                        height: root.ids.power.height * 1.25
                                        anchor_y: 'top'
                                        ButtonL:
                                                id: power
                                                on_release: root.power()
                                                background: 'images/power.png'
                                GridLayout:
                                        cols: 2
                                        size_hint: None, None
                                        size: self.minimum_width, self.minimum_height
                                        spacing: root.width * .125, root.height * .3
                                        RepeatButtonM:
                                                on_repeat: root.vol_up()
                                                background: 'images/plus.png'
                                        RepeatButtonM:
                                                on_repeat: root.ch_up()
                                                background: 'images/up.png'
                                        Label:
                                                text: 'Vol'
                                        Label:
                                                text: 'Ch'
                                        RepeatButtonM:
                                                on_repeat: root.vol_down()
                                                background: 'images/minus.png'
                                        RepeatButtonM:
                                                on_repeat: root.ch_down()
                                                background: 'images/down.png'
                                        ButtonM:
                                                on_release: root.mute()
                                                background: 'images/volume_muted.png'
                                        ButtonM:
                                                on_release: root.info()
                                                text: 'Info'
                                                # make background transparent
                                                background_color: 0, 0, 0, 0
                AnchorLayout:
                        GridLayout:
                                cols: 3
                                size_hint: None, None
                                size: self.minimum_width, self.minimum_height
                                spacing: root.width * .125,
                                CircularButtonM:
                                        text: '1'
                                        on_release: root.digit(1)
                                CircularButtonM:
                                        text: '2'
                                        on_release: root.digit(2)
                                CircularButtonM:
                                        text: '3'
                                        on_release: root.digit(3)
                                CircularButtonM:
                                        text: '4'
                                        on_release: root.digit(4)
                                CircularButtonM:
                                        text: '5'
                                        on_release: root.digit(5)
                                CircularButtonM:
                                        text: '6'
                                        on_release: root.digit(6)
                                CircularButtonM:
                                        text: '7'
                                        on_release: root.digit(7)
                                CircularButtonM:
                                        text: '8'
                                        on_release: root.digit(8)
                                CircularButtonM:
                                        text: '9'
                                        on_release: root.digit(9)
                                BoxLayout:
                                CircularButtonM:
                                        text: '0'
                                        on_release: root.digit(0)
