<TV>:
        text: 'TV'
        BoxLayout:
                RecycleView:
                BoxLayout:
                        orientation: 'vertical'
                        Button:
                                text: 'Power'
                                on_release: root.power()
                        GridLayout:
                                cols: 2
                                Button:
                                        text: 'Vol+'
                                        on_release: root.vol_up()
                                Button:
                                        text: 'Ch+'
                                        on_release: root.ch_up()
                                Button:
                                        text: 'Vol-'
                                        on_release: root.vol_down()
                                Button:
                                        text: 'Ch-'
                                        on_release: root.ch_down()
                                Button:
                                        text: 'Mute'
                                        on_release: root.mute()
                                Button:
                                        text: 'Info'
                                        on_release: root.info()
                GridLayout:
                        cols: 3
                        Button:
                                text: '1'
                                on_release: root.digit(1)
                        Button:
                                text: '2'
                                on_release: root.digit(2)
                        Button:
                                text: '3'
                                on_release: root.digit(3)
                        Button:
                                text: '4'
                                on_release: root.digit(4)
                        Button:
                                text: '5'
                                on_release: root.digit(5)
                        Button:
                                text: '6'
                                on_release: root.digit(6)
                        Button:
                                text: '7'
                                on_release: root.digit(7)
                        Button:
                                text: '8'
                                on_release: root.digit(8)
                        Button:
                                text: '9'
                                on_release: root.digit(9)
                        BoxLayout:
                        Button:
                                text: '0'
                                on_release: root.digit(0)
