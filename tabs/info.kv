#:import Window kivy.core.window.Window

<Info>:
        text: 'Info'
        TabContentLayout:
                spacing: self.width * .05
                BoxLayout:
                        orientation: 'vertical'
                        AnchorLayout:
                                anchor_y: 'bottom'
                                BoxLayout:
                                        size_hint_y: None
                                        orientation: 'vertical'
                                        padding: 0, Window.height * .12
                                        spacing: Window.height * .125
                                        InfoLeftLabel:
                                                id: date
                                                padding_x: Window.height * .0125
                                        InfoLeftLabel:
                                                id: time
                                                bold: True
                                                font_size: Window.height * .2
                        BorderedBoxLayout:
                                orientation: 'vertical'
                                size_hint_y: 1.6
                                BoxLayout:
                                        InfoLeftLabel:
                                                text: 'Promoci√≥n'
                                        InfoRightLabel:
                                                id: special_offer
                                BoxLayout:
                                        InfoLeftLabel:
                                                text: 'Ingreso'
                                        InfoRightLabel:
                                                id: shift_start
                                BoxLayout:
                                        InfoLeftLabel:
                                                text: 'Fin de turno'
                                        InfoRightLabel:
                                                id: shift_end
                                BoxLayout:
                                        InfoLeftLabel:
                                                text: 'Despertador'
                                        InfoRightLabel:
                                                id: alarm
                BorderedBoxLayout:
                        orientation: 'vertical'
                        BoxLayout:
                                InfoLeftLabel:
                                        text: 'Alojamiento'
                                InfoRightLabel:
                                        id: lodging
                        BoxLayout:
                                InfoLeftLabel:
                                        text: 'Recargos/Pernocte'
                                InfoRightLabel:
                                        id: surcharge
                        BoxLayout:
                                InfoLeftLabel:
                                        text: 'Bar'
                                InfoRightLabel:
                                        id: bar
                        BoxLayout:
                                InfoLeftLabel:
                                        text: 'Bonificaciones'
                                InfoRightLabel:
                                        id: bonus
                        BoxLayout:
                                InfoLeftLabel:
                                        text: 'Descuentos'
                                InfoRightLabel:
                                        id: discount
                        BoxLayout:
                                InfoLeftLabel:
                                        text: 'Pagado a cuenta'
                                InfoRightLabel:
                                        id: paid
                        BoxLayout:
                                InfoLeftLabel:
                                        text: 'Total'
                                InfoRightLabel:
                                        id: total
